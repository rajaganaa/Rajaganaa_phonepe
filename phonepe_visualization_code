# Create the table if it does not exist
create_query_1 = '''
CREATE TABLE IF NOT EXISTS agg_insurance(
    States VARCHAR(255),
    Years INT,
    Quarter INT,
    Transaction_type VARCHAR(255),
    Transaction_count BIGINT,
    Transaction_amount BIGINT
)
'''

# Create the table if it does not exist
create_query_2 = '''
CREATE TABLE IF NOT EXISTS aggre_transaction(
    States VARCHAR(255),
    Years INT,
    Quarter INT,
    Transaction_type VARCHAR(255),
    Transaction_count BIGINT,
    Transaction_amount BIGINT
)
'''

# Create the table if it does not exist
create_query_3 = '''
CREATE TABLE IF NOT EXISTS aggree_userr(
    States VARCHAR(255),
    Years INT,
    Quarter INT,
    Brand VARCHAR(255),
    Transaction_count BIGINT,
    Percentage float
)
'''

# Create the table if it does not exist
create_query_4 = '''
CREATE TABLE IF NOT EXISTS map_insurance(
    States VARCHAR(255),
    Years INT,
    Quarter INT,
    Districts VARCHAR(255),
    Transaction_count BIGINT,
    Transaction_amount BIGINT
)
'''

# Create the table if it does not exist
